{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input type="text" name="_username" class="form-control" placeholder="Adresse Email ..." required="required">
        </div>
        <div class="form-group">
            <input type="password" name="_password" class="form-control" placeholder="Mot de Passe ..." required="required">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Inscription</button>
        </div>
    </form>


{% endblock %}
